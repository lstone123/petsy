<h1>My Pets!</h1>
<ul>
<% @pets.each do |pet| %>
      <li>
        <%= link_to pet.name, pet_path(pet[:id]) %>
        <%= link_to "Delete",
            pet_path(pet[:id]),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
            %>
      </li>
    <% end %>
</ul>

<%= link_to "Add one of your pet's to the list", new_pet_path, class: "btn btn-primary" %>
