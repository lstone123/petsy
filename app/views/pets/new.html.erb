<div class="louise-container">
  <h1>Add your pet</h1>
  <%= simple_form_for(@pet) do |f| %>
    <%= f.input :name %>
    <%= f.input :species, collection: %w(dog cat bird reptile) %>
    <%= f.input :age %>
    <%= f.input :description %>
    <%= f.input :requirements %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }  %>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>

