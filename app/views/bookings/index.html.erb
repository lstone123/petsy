<div class="louise-container">
  <h1>My Bookings</h1>
  <div class="bookings-container">
    <% @bookings.each do |booking| %>
    <div class="bookings-card">
      <%if !current_user.sitter %>
        <p><b>Pet Sitter: </b><%= booking.sitter_profile.user.first_name %> <%= booking.sitter_profile.user.last_name %></p>
        <p><i class="fa-regular fa-calendar"></i> <%= booking.start_date %> <%= booking.end_date %></p>
        <p><b>Booking confirmed? </b>
          <% if booking.confirmed? %>
            <i class="fa-regular fa-square-check"></i>
          <% else %>
            <i class="fa-regular fa-square"></i>
        </p>
          <% end %>
        <div>
        <hr class=“sitter-line”>
          <%= link_to "view this booking", booking_path(booking), class: "btn-green-light-fontweight" %>
          <%= link_to "🗑", booking_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete?" }, class: "btn-delete" %>
        </div>
      <% else %>
        <p><b>Owner Name: </b><%= booking.user.first_name %> <%= booking.user.last_name %></p>
        <p><b>Owner Message: </b><%= booking.owner_message %></p>
        <p></p><i class="fa-regular fa-calendar"></i> <%= booking.start_date %> <%= booking.end_date %></p>
        <p><b>Response: </b><%= booking.sitter_message %></p>
        <p><b>Booking confirmed? </b>
          <% if booking.confirmed? %>
            <i class="fa-regular fa-square-check"></i>
          <% else %>
            <i class="fa-regular fa-square"></i>
          </p>
          <% end %>
        <div>
          <%= link_to "view this booking", booking_path(booking), class: "btn-green-light-fontweight" %>
          <%= link_to booking_path(booking), data: { turbo_method: :delete, turbo_confirm: "Are you sure to delete?" }, class: "btn-delete"  do %>
            <i class="fa-regular fa-trash"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <% end %>
  </div>
</div>

<div class="booking-page-banner-container">
  <div class="booking-page-banner"></div>
</div>
